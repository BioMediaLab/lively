{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "lib": ["es2015", "esnext.asynciterable", "es2017", "dom"],
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "strict": false,
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "include": ["./src/**/*.ts", ".yoga/**/*"],
  "exclude": ["node_modules"],
  "emitDecoratorMetadata": true
}
